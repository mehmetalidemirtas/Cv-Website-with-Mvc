@using MvcCvProject.Models.Entity
@model List<Table_Certificates>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header p-2">
                    </div>
                    <div class="card-body">
                        <div class="tab-pane" id="timeline">
                            <div class="timeline timeline-inverse">
                                @foreach (var x in Model)
                                {
                                    <div class="time-label">
                                        <span class="bg-dark">
                                            @x.Date
                                        </span>
                                    </div>
                                    <div>
                                        <i class="fas fa-certificate bg-primary"></i>
                                        <div class="timeline-item">
                                            <div class="timeline-body">
                                                @x.Explanation
                                            </div>
                                            <div class="timeline-footer">
                                                <a href="/Certification/UpdateCertification/@x.ID" class="btn btn-success btn-sm">
                                                    <i class="fas fa-pencil-alt"></i>
                                                    Update
                                                </a>
                                                <a href="/Certification/DeleteCertification/@x.ID" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                    Delete
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <a href="/Certification/AddCertification/" class="btn btn-primary">Add New Certification</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
