@using MvcCvProject.Models.Entity
@model List<Table_Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header p-2">
                    </div>
                    <div class="card-body">
                        <div class="tab-pane" id="timeline">
                            <div class="timeline timeline-inverse">
                                @foreach (var x in Model)
                                {
                                    <div class="time-label">
                                        <span class="bg-cyan">
                                            @(((DateTime)x.Date).ToString("dd-MM-yyyy"))
                                        </span>
                                    </div>
                                    <div>
                                        <i class="fas fa-comments bg-warning"></i>
                                        <div class="timeline-item">
                                            <span class="time">@x.Mail</span>
                                            <h3 class="timeline-header"><a href="#">@x.NameSurname  </a> @x.Topic</h3>
                                            <div class="timeline-body">
                                                @x.Message
                                            </div>
                                            <div class="timeline-footer">
                                                <a href="/Contact/DeleteComment/@x.ID" class="btn btn-danger btn-flat btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                    Delete
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>